            font-size: 18px;
            color: #6a4c93;
            margin-top: 0;
        }

        /* Gaya input dan tombol */
        #input-pesan {
            padding: 12px;
            width: 80%;
            margin-bottom: 15px;
            border: 2px solid #f28cb1;
            border-radius: 20px;
            font-size: 16px;
            outline: none;
            transition: border-color 0.3s ease;
        }

        #input-pesan:focus {
            border-color: #d84c9b;
        }

        #tambah-pesan {
            padding: 12px 24px;
            background: #d84c9b;
            color: white;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-size: 18px;
            transition: background-color 0.3s ease;
        }

        #tambah-pesan:hover {
            background: #9b2c6f;
        }

        /* Gaya kontainer ucapan */
        .ucapan-container {
            margin: 15px auto;
